# Top-level EditorConfig file
root = true

# Default for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Specific settings for QML files
[*.qml]
indent_style = tab
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

